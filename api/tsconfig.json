{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "build",
    "rootDir": "..",
    "strict": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules"]
}
